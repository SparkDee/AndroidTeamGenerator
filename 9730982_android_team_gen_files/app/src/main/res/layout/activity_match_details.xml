<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ActivityMatchDetails"
    android:background="@drawable/blank_land"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_small"
            android:id="@+id/logout_icon"
            android:background="@null"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_footy"
            android:layout_alignParentRight="true"
            android:id="@+id/home_icon"
            android:background="@null"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/match_details_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match ID"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/match_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/match_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/match_details_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEditMatchDetails"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:background="#000"
            android:text="EDIT"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:text="DELETE"
            android:id="@+id/btnDeleteMatchDetails"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:background="#000"
            android:layout_height="60dp"/>

        <Button
            android:layout_width="wrap_content"
            android:text="CONFIRMED PLAYERS"
            android:layout_gravity="left"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/btnViewConfirmedPlayersMatch"
            android:background="#000"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"/>
    </LinearLayout>



</LinearLayout>
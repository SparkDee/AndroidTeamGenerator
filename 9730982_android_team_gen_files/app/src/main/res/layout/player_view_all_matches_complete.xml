<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:layout_marginTop="8dp"
    android:id="@+id/list_container_admin_confirmed_player"
    android:padding="4dp"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="65dp"
                app:civ_circle_background_color="#D6D4D4"
                android:layout_height="65dp"
                android:src="@drawable/football_icon"
                android:alpha=".15"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="MATCH DATE"
                android:id="@+id/list_all_matches_complete_date"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:paddingBottom="35dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="MATCH TIME"
                android:id="@+id/list_all_matches_complete_time"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="PLAYER VENUE"
                android:id="@+id/list_all_matches_complete_venue"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:paddingTop="45dp"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</LinearLayout>